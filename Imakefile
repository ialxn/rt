AllTarget(rt spectrum flux_2D get_flux)
#NormalProgramTarget(rt,$(OBJ),NullParameter,NullParameter, $(LIBS))
NormalProgramTarget(rt-semistatic,$(OBJ),NullParameter,NullParameter, $(LIBS-SEMISTATIC))
